<header>
    <nav>
    <%= link_to image_tag('logo.png'), root_path %>
    <ul class="left">
      <li> <%= link_to "All Movies" , movies_path %> </li>
      <li>  <%= link_to "Recent" , filtered_path(:upcoming) %> </li>
      <li>  <%= link_to "Upcoming" , filtered_path(:recent) %> </li>
    </ul>

    <ul class="right"> 
      <% if current_user %>
        <li><%= link_to current_user.name , user_path(current_user) %></li>
        <li> <%= link_to "Sign Out" , session_path(:user_id) , data: {turbo_method: :delete , turbo_confirm: "Are u sure?"} %> </li>
      <% else %>
        <li><%= link_to "Sign In", new_session_path, class: "button" %></li>
        <li><%= link_to "Sign Up" , signup_path , class: "button" %> </li>
      <% end %>
    </ul>
    </nav>
</header>